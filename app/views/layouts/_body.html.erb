<div class="row home_artwork">
	<% if Artwork.any? %>
		<h4 class="artworks_title">
			<%= @artwork.title %>
		</h4>
		<div class="col-md-6">
			<%= @artwork.content %>
		</div>
		<div class="col-md-6">
			<% if @artwork.image.attached? %>
				<%= image_tag @artwork.image %>
			<% end %>
		</div>
	<% end %>
</div>