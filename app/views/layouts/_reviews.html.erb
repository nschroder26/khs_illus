<h2 class="review_title">Reviews</h2>
<div class="row all-reviews">
	<div class="card text-black bg-light mb-3 col-md">
	  <div class="card-body">
	    <blockquote class="blockquote mb-0">
	      <p>"<%= @rev_rand[0].content %>"</p>
	      <footer class="blockquote-footer">
	      	<cite title="Source Title"><%= @rev_rand[0].name %></cite>
	      </footer>
	    </blockquote>
	  </div>
	</div>
	<div class="card text-black bg-light mb-3 col-md">
	  <div class="card-body">
	    <blockquote class="blockquote mb-0">
	      <p>"<%= @rev_rand[1].content %>"</p>
	      <footer class="blockquote-footer">
	      	<cite title="Source Title"><%= @rev_rand[1].name %></cite>
	      </footer>
	    </blockquote>
	  </div>
	</div>
	<div class="card text-black bg-light mb-3 col-md">
	  <div class="card-body">
	    <blockquote class="blockquote mb-0">
	      <p>"<%= @rev_rand[2].content %>"</p>
	      <footer class="blockquote-footer">
	      	<cite title="Source Title"><%= @rev_rand[2].name %></cite>
	      </footer>
	    </blockquote>
	  </div>
	</div>
</div>
<button type="button" class="btn btn-outline-dark" data-bs-toggle="modal" data-bs-target="#review-modal">
  Leave a Review!
</button>
<div class="modal fade" id="review-modal" tabindex="-1" 
	aria-labelledby="review-modal" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="rev-modal-title">Your Review</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<form>
					<div class="mb-3">
						<input type="text" class="form-control" id="reviewer-name" placeholder="Your name">
					</div>
					<div class="mb-1">
						<textarea class="form-control" id="review-text" placeholder="Your review"></textarea>
					</div>
				</form>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-primary">Submit</button>
			</div>
		</div>
	</div>
</div>