<h2 class="review-title">Reviews</h2>
<div class="row all-reviews">
	<div class="card text-black bg-light mb-3 col-md">
	  <div class="card-body">
	    <blockquote class="blockquote mb-0">
	      <p>"<%= @rev_rand[0].content %>"</p>
	      <footer class="blockquote-footer">
	      	<cite title="Source Title"><%= @rev_rand[0].name %></cite>
	      </footer>
	    </blockquote>
	  </div>
	</div>
	<div class="card text-dark bg-light mb-3 col-md">
	  <div class="card-body">
	    <blockquote class="blockquote mb-0">
	      <p>"<%= @rev_rand[1].content %>"</p>
	      <footer class="blockquote-footer">
	      	<cite title="Source Title"><%= @rev_rand[1].name %></cite>
	      </footer>
	    </blockquote>
	  </div>
	</div>
	<div class="card text-black bg-light mb-3 col-md">
	  <div class="card-body">
	    <blockquote class="blockquote mb-0">
	      <p>"<%= @rev_rand[2].content %>"</p>
	      <footer class="blockquote-footer">
	      	<cite title="Source Title"><%= @rev_rand[2].name %></cite>
	      </footer>
	    </blockquote>
	  </div>
	</div>
	<div class="row review-button-row">
		<div class="col-md-4">
			<button type="button" class="btn btn-outline-light" data-bs-toggle="modal" data-bs-target="#review-modal">
		  Leave a Review!
			</button>
		</div>
	</div>
</div>


<div class="modal fade" id="review-modal" tabindex="-1" 
	aria-labelledby="review-modal" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="rev-modal-title">Your Review</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<%= form_with(model: @review) do |f| %>
				<div class="modal-body review-body">
					<div class="mb-3">
						<%= f.text_field :name, required: true, placeholder: "Your name..." %>
					</div>
					<div class="mb-1" id="review-text">
						<%= f.text_area :content, required: true, placeholder: "Your review...", maxlength: 300 %>
					</div>
				</div>
				<div class="modal-footer" style="align-items: flex-start;">
					<div class="col review-note">
						200 Character limit
					</div>
					<div class="col">
						<%= f.submit "Submit", class: "btn btn-primary review-button"%>
					</div>
					
				</div>
			<% end %>
		</div>
	</div>
</div>