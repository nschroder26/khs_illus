<%= form_with(model: @artwork, local: true) do |f| %>
	<%= hidden_field_tag :searching, true %>
	<div class="content_title">
		<%= f.text_field :title, required: true, placeholder: "Artwork title..." %>
	</div>
	<div class="content_field">
		<%= f.text_area :content, required: true, placeholder: "Artwork description..." %>
	</div>
	<span class="image">
		<%= f.file_field :image, accept: "image/jpeg,image/gif,image/png" %>
	</span>
	<%= f.submit "Submit", class: "btn btn-primary submit_button" %> 
<% end %>