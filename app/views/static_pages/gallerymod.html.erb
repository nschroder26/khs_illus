<div class="general-page">
	<div class="row">
		<section class="artwork-form">
			<%= render 'shared/artwork_form' %>
		</section>
	</div>
	<div class="update-card card">
		<h4 class="update-title">Gallery List</h4>
		<div class="update-body">
			<% if Artwork.any? %>
				<div class="container artworks-list">
					<%= render :partial => "artworks/item", 
					:collection => @items, 
					:as => :artwork %>
				</div>
			<%else%>
				<h5 class="no-art-text">Please add an Artwork</h5>
			<% end %>
		</div>
	</div>
</div>=